<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/repository_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Pull request title"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repository_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body of the pull request"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/repository_title"
        app:layout_constraintLeft_toLeftOf="@id/repository_title"
        app:layout_constraintStart_toStartOf="@id/repository_title"
        app:layout_constraintTop_toBottomOf="@id/repository_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repository_body"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="91dp"
       />

    <TextView
        android:id="@+id/repository_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Username"
        android:textColor="@color/teal_700"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/repository_body" />

    <TextView
        android:id="@+id/repository_name_surmane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Name Surname"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/repository_username"/>


</androidx.constraintlayout.widget.ConstraintLayout>